[Unit]
Description=<%= @params[:description] || @params[:name] %>

[Service]
ExecStart=<%= @params[:command] %>
User=<%= @params[:user] %>
Restart=always
<% if !@params.fetch(:sigkill, true) -%>
SendSIGKILL=false
<% end -%>
<% if @params[:restart_secs] -%>
RestartSecs=<%= @params[:restart_secs] %>
<% end -%>
